	pages = {1--19},
	file = {ScienceDirect Snapshot:/home/jay/Zotero/storage/6M6QYXVK/S0304380006003140.html:text/html;Austin - 2007 - Species distribution models and ecological theory.pdf:/home/jay/Zotero/storage/JU4L9G25/Austin - 2007 - Species distribution models and ecological theory.pdf:application/pdf},
