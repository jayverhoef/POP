	author = {Barbet‐Massin, Morgane and Jiguet, Frédéric and Albert, Cécile Hélène and Thuiller, Wilfried},
	year = {2012},
	keywords = {background data, bias, biomod, ecological niche modelling, sampling design, virtual species},
